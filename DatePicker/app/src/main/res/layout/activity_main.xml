<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.nieallen.datepicker.DataPickerActivity">

    <RelativeLayout
        android:id="@+id/layout_range_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_start_time_tip"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Start Time"/>

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@id/tv_start_time_tip"
            android:layout_below="@id/tv_start_time_tip"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_start_time_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_start_time"
            android:layout_below="@id/tv_start_time"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_end_time_tip"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/tv_start_time_tip"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_start_time_tip"
            android:text="End Time"/>

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@id/tv_end_time_tip"
            android:layout_below="@id/tv_end_time_tip"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_end_time_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_end_time"
            android:layout_below="@id/tv_end_time"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>


    <DatePicker
        android:id="@+id/my_data_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_range_time"
        android:layout_marginTop="10dp"
        android:datePickerMode="calendar"/>
</RelativeLayout>
